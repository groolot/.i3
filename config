client.focused          #111111 #AFD700 #000000 #000000
client.focused_inactive #111111 #3F6700 #ffffff #484e50
#client.unfocused        #111111 #222222 #888888 #292d2e
#client.urgent           #2f343a #900000 #ffffff #900000

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors {
        background #000000
        statusline #ffffff
        separator #666666

        focused_workspace  #4c7899 #285577 #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #2f343a #900000 #ffffff
    }
    status_command i3status
    mode hide
}

exec --no-startup-id xsetroot -solid "#000000"

bindsym Control+Mod1+l exec i3-msg workspace 1 && i3lock --color=111111 --nofork
bindsym $mod+b border toggle
bindsym XF86AudioMute exec /usr/bin/pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioLowerVolume exec /usr/bin/pactl -- set-sink-volume @DEFAULT_SINK@ -0.1
bindsym XF86AudioRaiseVolume exec /usr/bin/pactl -- set-sink-volume @DEFAULT_SINK@ +0.1
bindsym XF86Display exec arandr
bindsym Print exec /usr/bin/gnome-screenshot -f ~/Images/screenshot-$(date "+%Y%m%d-%H%M%S").png -w
bindsym Control+Mod1+Print exec /usr/bin/gnome-screenshot -f ~/Images/screenshot-$(date "+%Y%m%d-%H%M%S").png -a
bindsym $mod+Shift+x exec /usr/bin/xset b off s off -dpms
bindsym $mod+Shift+s exec /usr/bin/screenkey
bindsym $mod+n exec /usr/bin/nautilus
bindsym Control+$mod+Mod1+c exec /usr/bin/xclock -render

assign [class="^Thunderbird$"] 2
assign [class="^Icedove$"] 2
assign [class="^(Iceweasel|Firefox|chromium)$" instance="^(Navigator|chromium)$"] 3
assign [class="^Codeblocks$"] 4
assign [class="^QtCreator$"] 5
for_window [instance="^codeblocks$"] floating enable
for_window [instance="^codeblocks$" title="^.*Code::Blocks.*$"] floating disable
assign [class="^Xchat$"] 9

