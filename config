# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
set $alt Mod1
set $mod Mod4

set $laptop eDP1
set $hdmi HDMI1
set $hdmi2 HDMI2
set $displayport DP1

set $ws1 1 
set $ws2 2 
    assign [class="^(akregator|Icedove|Mail|Thunderbird)$"] $ws2
set $ws3 3 
    assign [class="^(Iceweasel|Firefox.*|chromium|[lL]uakit|(x|X|gnome)-www-browser|[zZ]otero)$" instance="^(Navigator|chromium|[lL]uakit|(x|X|gnome)-www-browser)$"] $ws3
set $ws4 4 
    assign [class="^Codeblocks$"] $ws4
        for_window [instance="^codeblocks$"] floating enable
        for_window [instance="^codeblocks$" title="^.*Code::Blocks.*$"] floating disable
    assign [class="^[Qq]t[Cc]reator$"] $ws4
    assign [class="^[Cc]odelite$"] $ws4
set $ws5 5 
    assign [class="^[Tt]ex[Mm]aker"] $ws5
set $ws6 6 
    assign [class="^[Bb]lender"] $ws6
    assign [class="^[Gg]imp"] $ws6
    assign [class="^[Ii]nkscape"] $ws6
    assign [class="^[Ss]cribus"] $ws6
    assign [class="^[Dd]ia"] $ws6
    assign [class="^[Dd]igi[Kk]am"] $ws6
set $ws7 7 
    workspace "$ws7" output $hdmi2
    assign [class="^[Qq]emu.*$"] $ws7
        for_window [class="^[Qq]emu.*$"] floating disable border none
set $ws8 8 
    assign [class="^[Nn]autilus$"] $ws8
set $ws9 9 
    assign [class="^Hexchat$"] $ws9
set $ws10 10 
    workspace "$ws10" output $hdmi2
    assign [class="^[Kk]odi"] $ws10
set $ws11 11 
set $ws12 12 
set $ws13 13 
set $ws14 14 
set $ws15 15 
    assign [class="^xfreerdp$"] $ws15
set $ws16 16 

# Go to last workspace
# workspace_auto_back_and_forth yes
bindsym $mod+Tab workspace back_and_forth

for_window [class="^Screenkey$"] floating enable border none
for_window [class="^[Xx][Cc]lock$"] floating enable border none
for_window [class="^[Dd]isplay$"] floating enable border none
for_window [class="^([Ee]vince|[Dd]evhelp|[Nn]autilus)$"] floating disable border pixel 3
for_window [title="^.*GEM.*$"] floating enable border normal 1
for_window [class="Audacity"] border normal 1
for_window [class="Pavucontrol"] floating enable
for_window [class="Thunderbird" instance="Calendar"] floating enable

new_float 1pixel
hide_edge_borders both
bindsym $mod+b border toggle

# limit the floating container
floating_minimum_size 75 x 50
floating_maximum_size 1280 x 900

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
# font -misc-fixed-medium-r-normal--10-100-75-75-C-60-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
font pango:monospace, FontAwesome 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec gnome-terminal

# kill focused window
bindsym $mod+Shift+a kill
bindsym --release Control+button2 kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run -i -fn "monospace-9" -nb white -nf black -sb black -sf "#55ff55"
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $mod+Shift+d exec --no-startup-id i3-dmenu-desktop --dmenu='dmenu -i -fn "monospace-9" -nb white -nf black -sb black -sf "#55ff55"'

# Make the currently focused window a scratchpad
bindsym $mod+Shift+oe move scratchpad

# Show the next scratchpad window
bindsym $mod+oe scratchpad show

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+z layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+q focus parent

# focus the child container
bindsym $mod+Shift+q focus child

# switch to workspace
bindsym $mod+ampersand workspace $ws1
bindsym $mod+eacute workspace $ws2
bindsym $mod+quotedbl workspace $ws3
bindsym $mod+apostrophe workspace $ws4
bindsym $mod+parenleft workspace $ws5
bindsym $mod+minus workspace $ws6
bindsym $mod+egrave workspace $ws7
bindsym $mod+underscore workspace $ws8
bindsym $mod+ccedilla workspace $ws9
bindsym $mod+agrave workspace $ws10
bindsym $mod+parenright workspace $ws11
bindsym $mod+equal workspace $ws12
bindsym $mod+dead_circumflex workspace $ws13
bindsym $mod+dollar workspace $ws14
bindsym $mod+ugrave workspace $ws15
bindsym $mod+asterisk workspace $ws16

# move focused container to workspace
bindsym $mod+Shift+ampersand move container to workspace $ws1
bindsym $mod+Shift+eacute move container to workspace $ws2
bindsym $mod+Shift+quotedbl move container to workspace $ws3
bindsym $mod+Shift+apostrophe move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+minus move container to workspace $ws6
bindsym $mod+Shift+egrave move container to workspace $ws7
bindsym $mod+Shift+underscore move container to workspace $ws8
bindsym $mod+Shift+ccedilla move container to workspace $ws9
bindsym $mod+Shift+agrave move container to workspace $ws10
bindsym $mod+Shift+parenright move container to workspace $ws11
bindsym $mod+Shift+equal move container to workspace $ws12
bindsym $mod+Shift+dead_circumflex move container to workspace $ws13
bindsym $mod+Shift+dollar move container to workspace $ws14
bindsym $mod+Shift+ugrave move container to workspace $ws15
bindsym $mod+Shift+asterisk move container to workspace $ws16

# reload the configuration file
bindsym $mod+Shift+Home reload; exec notify-send -t 1500 "i3 reloaded!"
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+End restart

set $mode_system "(l)ock, (e)xit, (s)uspend, (h)ibernate, (r)eboot, (p)oweroff "
mode $mode_system {
     bindsym l exec --no-startup-id i3lock --color=000000 --dpms --nofork --show-failed-attempts --ignore-empty-password, mode "default"
     bindsym e exit, mode "default"
     bindsym s exec --no-startup-id i3lock --color=D0D0D0 --dpms --nofork --show-failed-attempts --ignore-empty-password; exec --no-startup-id systemctl suspend, mode "default"
     bindsym h exec --no-startup-id i3lock --color=D0D0D0 --dpms --nofork --show-failed-attempts --ignore-empty-password; exec --no-startup-id systemctl hibernate, mode "default"
     bindsym r exec --no-startup-id systemctl reboot, mode "default"
     bindsym p exec --no-startup-id systemctl poweroff, mode "default"

     bindsym Return mode "default"
     bindsym Escape mode "default"
}
# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+e mode $mode_system

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Appearance
#class                  border  backgr  text    indicator
client.focused          #111111 #AFD700 #000000 #000000
client.focused_inactive #111111 #3F6700 #ffffff #484e50
#client.unfocused        #111111 #222222 #888888 #292d2e
#client.urgent           #2f343a #900000 #ffffff #900000

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors {
        background #000000
        statusline #ffffff
        separator #666666

        focused_workspace  #4c7899 #285577 #ffffff
        active_workspace   #333333 #5f676a #ffffff
        inactive_workspace #333333 #222222 #888888
        urgent_workspace   #2f343a #900000 #ffffff
    }
    status_command i3status
    mode hide
}


# XRandR bindings
set $mode_xrandr "(l)aptop, (h)DMI-2, HDM(i)-1, (d)P-1, (c)opy, e(x)tend, (a)randr"
mode $mode_xrandr {
     bindsym l exec xrandr --output $laptop --auto --output $hdmi --off --output $displayport --off --output $hdmi2 --off, mode "default"
     bindsym h exec xrandr --output $laptop --off --output $hdmi --off --output $displayport --off --output $hdmi2 --auto, mode "default"
     bindsym i exec xrandr --output $laptop --off --output $hdmi --auto --output $displayport --off --output $hdmi2 --off, mode "default"
     bindsym d exec xrandr --output $laptop --off --output $hdmi --off --output $displayport --auto --output $hdmi2 --off, mode "default"
     bindsym x mode $mode_xrandr_extend
     bindsym c exec xrandr --output $laptop --auto --output $hdmi2 --auto --same-as $laptop --output $hdmi --off --output $displayport --off, mode "default"
     bindsym a exec arandr, mode "default"

     bindsym Return mode "default"
     bindsym Escape mode "default"
}
set $mode_xrandr_extend "(h)DMI-2, HDM(i)-1, (d)P-1"
mode $mode_xrandr_extend {
     bindsym h exec xrandr --output $laptop --auto --output $hdmi2 --auto --right-of $laptop --output $displayport --off --output $hdmi --off, mode "default"
     bindsym i exec xrandr --output $laptop --auto --output $hdmi --auto --right-of $laptop --output $displayport --off --output $hdmi2 --off, mode "default"
     bindsym d exec xrandr --output $laptop --auto --output $displayport --auto --right-of $laptop --output $hdmi --off --output $hdmi2 --off, mode "default"

     bindsym Return mode "default"
     bindsym Escape mode "default"
}
bindsym $mod+x mode $mode_xrandr
bindsym Control+$mod+$alt+Up exec xrandr --output $hdmi2 --rotate normal
bindsym Control+$mod+$alt+Right exec xrandr --output $hdmi2 --rotate right
bindsym Control+$mod+$alt+Left exec xrandr --output $hdmi2 --rotate left
bindsym Control+$mod+$alt+Down exec xrandr --output $hdmi2 --rotate inverted

bindsym Control+$alt+l exec i3lock --color=000000 --dpms --nofork --show-failed-attempts --ignore-empty-password
bindsym XF86MonBrightnessDown exec xbacklight -dec 10; exec notify-send -t 500 "Moins lumineux"
bindsym XF86MonBrightnessUp exec xbacklight -inc 10; exec notify-send -t 500 "Plus lumineux"
bindsym XF86AudioMute exec /usr/bin/pactl set-sink-mute @DEFAULT_SINK@ toggle && notify-send -t 500 "Mute $(pacmd list-sinks | grep muted | awk '{print $2}')"
bindsym XF86AudioLowerVolume exec pactl -- set-sink-mute @DEFAULT_SINK@ false; exec pactl -- set-sink-volume @DEFAULT_SINK@ -0.1; exec notify-send -t 500 "Moins fort"
bindsym XF86AudioRaiseVolume exec pactl -- set-sink-mute @DEFAULT_SINK@ false; exec /usr/bin/pactl -- set-sink-volume @DEFAULT_SINK@ +0.1; exec notify-send -t 500 "Plus fort"

bindsym $mod+Shift+x exec /usr/bin/xset b on s on +dpms

# Print screen key binding
bindsym Print exec maim --hidecursor -s ~/Images/screenshot-$(date "+%Y%m%d-%H%M%S").png
bindsym Control+Print exec maim --hidecursor ~/Images/screenshot-$(date "+%Y%m%d-%H%M%S").png

# Screenkey
bindsym $mod+Shift+s exec screenkey --no-detach --timeout 3 --position bottom --font-size small --key-mode composed --mods-mode emacs --vis-shift --font-color "#ffffff" --bg-color "#000000" --compr-cnt 2 --font "monospace bold"
bindsym Control+$mod+Shift+s exec pkill -9 screenkey

# GUI file manager
bindsym $mod+Shift+n exec pcmanfm --no-desktop

# XClock
bindsym $mod+$alt+c exec xclock -render
bindsym Control+$mod+$alt+c exec pkill -9 xclock

# Web browser
bindsym $mod+Shift+w exec --no-startup-id ~/.local/bin/zotero, exec firefox-esr

# Qjackctl with i3 layout
bindsym $mod+Shift+j exec i3-msg 'append_layout ~/.config/i3/qjackctl.json' && qjackctl

# Au démarrage
exec --no-startup-id xsetroot -solid "#000000"
exec --no-startup-id /usr/bin/xset b off s off -dpms
